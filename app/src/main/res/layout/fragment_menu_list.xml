<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card putih -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Judul utama -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apa saja menunya?"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="22sp"
                android:paddingBottom="12dp"/>

            <!-- Category text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"
                android:textSize="14sp"
                android:textColor="#333333"
                android:paddingBottom="8dp"/>

            <!-- GAMBAR KATEGORI 1 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chikenskin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken skin"
                android:textSize="12sp"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"/>

            <!-- SNACK TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snack"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="18sp"
                android:paddingBottom="6dp"/>

            <!-- LIST SNACK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <!-- Item format kiri harga, kanan nama -->
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp8.000,-      Gorengan Keranjang"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp8.500,-      French Fries Mayo"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp10.000,-    Calamary"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp15.000,-    Onion Ring"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp20.000,-    Cheese French Fries"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp12.500,-    Chicken Skin"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp15.000,-    Ice Cream Goreng"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp5.000,-      Cireng"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp15.000,-    Zaitun Kaya Toast"
                    android:textColor="#333333" />

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp25.000,-    Zaitun Fritter"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- GAMBAR PIZZA -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:src="@drawable/pizza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pizza"
                android:textSize="12sp"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"/>

            <!-- LIST PIZZA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingEnd="8dp">

                <!-- HARGA -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp35.000,-"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp30.000,-"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp35.000,-"
                        android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp35.000,-"
                        android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp25.000,-"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp50.000,-"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp27.500,-"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp37.500,-"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- LIST MENU -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheese Pizza"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elva Supreme"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aeste Hawaiian Chicken"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barbeque Chicken Pizza"
                        android:textColor="#333333" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spicy Tuna Pizza"
                        android:textColor="#333333"/>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pepperoni Pizza"
                        android:textColor="#333333"/>

                </LinearLayout>

            </LinearLayout>


            <!-- BUTTON DRINKS -->
            <Button
                android:id="@+id/btnDrinks"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Drinks"
                android:textColor="#FFFFFF"
                android:backgroundTint="#32A8E0"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

    </LinearLayout>

</ScrollView>
