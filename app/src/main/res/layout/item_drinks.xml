<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgDrinks"
        android:src="@drawable/esteh"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDrinksName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menu Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintStart_toEndOf="@+id/imgDrinks"
        app:layout_constraintTop_toTopOf="@+id/imgDrinks"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/txtDrinksPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp 00.000"
        android:textColor="#555"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/txtDrinksName"
        app:layout_constraintTop_toBottomOf="@+id/txtDrinksName"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
