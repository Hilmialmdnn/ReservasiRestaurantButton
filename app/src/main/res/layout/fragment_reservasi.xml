<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ReservasiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Reservasi Baru"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih detail dan waktu reservasi Anda."
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_header"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/label_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Reservasi"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_instruction"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Tanggal"
            android:drawableEnd="@android:drawable/ic_menu_today"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/label_tanggal"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/label_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Kedatangan"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_tanggal"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Waktu"
            android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
            android:focusable="false"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/label_waktu"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/label_jumlah_orang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Tamu (Orang)"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_waktu"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_jumlah_orang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimal 1, Maksimal 10"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/label_jumlah_orang"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/label_ruangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tipe Ruangan"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_jumlah_orang"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/radio_group_ruangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/label_ruangan"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rb_indoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indoor (Area utama ber-AC)"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rb_outdoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outdoor (Taman/Teras, cocok untuk santai)" />

            <RadioButton
                android:id="@+id/rb_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP (Ruangan pribadi, minimal 4 orang)" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_konfirmasi_reservasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Reservasi"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/radio_group_ruangan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>